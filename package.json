    "email": "mdirshaddev+github@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mdirshaddev/packages.git"
  },
  "license": "MIT",
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "nx": "^18.0.4",
    "prettier": "^3.2.5",
